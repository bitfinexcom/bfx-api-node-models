{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/ts/modules/*",
        "src/types/ts/*"
      ]
    },

    "experimentalDecorators": true,

    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true
  },

  "include": [
    "src"
  ]
}
